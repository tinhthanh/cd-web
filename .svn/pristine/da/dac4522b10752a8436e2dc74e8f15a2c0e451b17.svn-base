<ng-template #templateListProjects>
  <!-- <app-lists-project [(projectList)]="dataFake"></app-lists-project> -->
  <div *ngIf="true; then templateContent">loading...</div>
</ng-template>
<ng-template #templateViewSelect>
  <div class="panel panel-success">
    <div class="panel-heading">
      <h3 class="panel-title">List Project select</h3>
    </div>
    <div style="padding: 5px;" class="panel-body">
        <div *ngIf="listSelect?.length ===0 "  > <span>No data view..</span> </div>
      <table  *ngIf="listSelect?.length !==0 " class="p-table-reposive">
        <thead>
          <tr>
            <th>Project name</th>
            <th style="width: 50px;">Action</th>

          </tr>
        </thead>
        <tbody>
         
          <tr *ngFor="let item of listSelect ">
            <td data-column="Project name"> {{ item.name }}</td>
            <td style="width: 100px;" data-column="Action">

              <a class="btn icon-btn btn-default">
                <span class="glyphicon btn-glyphicon glyphicon-share img-circle text-muted"></span>View</a>
              <a (click)="removeSelect(item)" class="btn icon-btn btn-danger">
                <span class="glyphicon btn-glyphicon glyphicon-trash img-circle text-danger"></span>Delete</a>
            </td>
          </tr>
          <!-- <tr>
            <td data-column="Project name">Studies design with Alexey Brodovitch, art director at Harper's Bazaar, and works as his assistant.</td>
            <td style="width: 100px;" data-column="Action">
              <a class="btn icon-btn btn-default">
                <span class="glyphicon btn-glyphicon glyphicon-share img-circle text-muted"></span>View</a>
              <a class="btn icon-btn btn-success">
                <span class="glyphicon btn-glyphicon glyphicon-plus img-circle text-success"></span>Add</a>
              <a class="btn icon-btn btn-danger">
                <span class="glyphicon btn-glyphicon glyphicon-trash img-circle text-danger"></span>Remove</a>
            </td>
          </tr> -->
        </tbody>
      </table>
      <div *ngIf="listSelect?.length !==0 " class="p-col-m-12" style="padding: 5px 0 5px 0px;">
        <a  [routerLink]="['/dashboard/issues-projects']" class="btn icon-btn btn-default"  >
          <span class="glyphicon btn-glyphicon glyphicon-share img-circle text-muted"></span>View all</a>
        <a  (click)="removeAllSelect()" class="btn icon-btn btn-muted" >
          <span class="glyphicon btn-glyphicon glyphicon-remove-circle img-circle text-muted"></span>Remove all</a>
      </div>
    </div>
  </div>
</ng-template>

<ng-template #templateContent>
  <div class="page">
    <div class="page__demo">
      <div class="main-container page__container">
        <div class="timeline">
          <div *ngFor="let item of listProject" class="timeline__group">
            <span class="timeline__year">{{ item.yaer }}</span>
            <div *ngFor="let child of item.data" class="timeline__box">
              <div class="timeline__date">
                <span class="timeline__day">{{getMonth(child.createOn)}}</span>
                  <span class="timeline__month">{{ getDay(child.createOn)}}</span>
              </div>
              <div class="timeline__post">
                <div class="timeline__content">
                  <p style="position: relative ; ">
                    <a class="loader"></a>
                    {{child.name}}

                    <label tooltip=" Click to view description" class="preview">
                      <input type="checkbox" />
                      <span style="    max-width: 95%; font-weight: normal ; ">
                        {{child.description}}
                      </span>
                    </label>
                    <a (click)="addSelect(child.id)" class="btn icon-btn btn-default">
                      <span class="glyphicon btn-glyphicon glyphicon-plus img-circle text-muted"></span>Add</a>

                  </p>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</ng-template>