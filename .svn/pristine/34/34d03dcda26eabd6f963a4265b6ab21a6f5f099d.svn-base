/* You can add global styles to this file, and also import other style files */

@import "~bootstrap/dist/css/bootstrap.css";
@import "~ng-drag-drop/style.css";
@import "~ngx-bootstrap/datepicker/bs-datepicker.css";
@import "https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css";

body {
    background-color: #E9E9E9;

     /* background-color: #cdedf785; */
}
.p-container {
    max-width:  1600px;
    margin: 0 auto;
}
@media only screen and (max-width: 1300px) {
 .p-container {
     max-width:  1200px;
     margin: 0 auto;
 }
}

  .p-header {
    background-color: #9933cc;
    color: #ffffff;
    padding: 15px;
    border-radius: 4px;
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 5px 0px 5px;
  }
  [class*="p-col-"] {
    width: 100%;
  }
  @media only screen and (min-width: 600px) {
      /* For tablets: */
      .p-col-m-1 {width: 8.33%;}
      .p-col-m-2 {width: 16.66%;}
      .p-col-m-3 {width: 25%;}
      .p-col-m-4 {width: 33.33%;}
      .p-col-m-5 {width: 41.66%;}
      .p-col-m-6 {width: 50%;}
      .p-col-m-7 {width: 58.33%;}
      .p-col-m-8 {width: 66.66%;}
      .p-col-m-9 {width: 75%;}
      .p-col-m-10 {width: 83.33%;}
      .p-col-m-11 {width: 91.66%;}
      .p-col-m-12 {width: 100%;}
  }
  @media only screen and (min-width: 768px) {
      /* For desktop: */
      .p-col-1 {width: 8.33%;}
      .p-col-2 {width: 16.66%;}
      .p-col-3 {width: 25%;}
      .p-col-4 {width: 33.33%;}
      .p-col-5 {width: 41.66%;}
      .p-col-6 {width: 50%;}
      .p-col-7 {width: 58.33%;}
      .p-col-8 {width: 66.66%;}
      .p-col-9 {width: 75%;}
      .p-col-10 {width: 83.33%;}
      .p-col-11 {width: 91.66%;}
      .p-col-12 {width: 100%;}
  }
  * {
      box-sizing: border-box;
  }
  [class*="p-col-"] {
    float: left;
  }

  .p-row::after {
    content: "";
      clear: both;
      display: table;
  }


