
  .icon {
    float: right;
    width: 22px;
    height: 22px;
    position: relative;
    cursor: pointer;
    transition: 0.3s;
}

  .icon:before {
    content: attr(data-count);
    position: absolute;
    height: 22px;
    width: 22px;
    font-size: 10px;
    line-height: 16px;
    text-align: center;
    background: #547df9;
    border-radius: 50%;
    color: #FFF;
    font-family: "Open Sans", sans-serif;
    margin: -8px;
    right: 0px;
    border: 3px solid white;
  }
  .arrow-up {
    width: 0;
    height: 0;
    border-left: 8px solid transparent;
    border-right: 8px solid transparent;
    border-bottom: 8px solid #e9e9e9;
    margin-left: 233px;
  }
  .user-details {
    position: absolute;
    top: 30px;
    width: 250px;
    right: 0px;
  }
.user-details .details-body {
    border: 1px solid #e9e9e9;
    border-radius: 4px 0px 4px 4px;
  }
 .user-details .details-body .title {
    padding: 5px;
    background-color: #e9e9e9;
  }
  .user-details .details-body .footer {
    padding: 5px;
    background-color: #e9e9e9;
  }
  .user-details .details-body .body {
    padding: 5px;
    background-color: white;
  }
  .infomation {
    float: right;
    position: relative;
    cursor: pointer;
    transition: 0.3s;
    top: -30px;
  }