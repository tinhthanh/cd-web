<ng-container>
<div class="editReport p-col-m-5 panel-success panel">
        <form class="form-horizontal">
                <div class="edit-form-title"><h4><strong>Edit Save Report</strong></h4></div>
            <div class="form-group">
              <label for="disabledInput" class="col-sm-2 control-label">Task Name</label>
              <div class="col-sm-10">
                <input value="{{reportSaveItem.taskName}}" class="form-control" id="report_subject" type="text" >
              </div>
            </div>
            <div class="form-group">
                <label for="disabledInput" class="col-sm-2 control-label">Description</label>
                <div class="col-sm-10">
                  <input value="{{reportSaveItem.description}}" class="form-control"  type="text" >
                </div>
              </div>
              <div class="form-group">
                    <label for="disabledInput" class="col-sm-2 control-label">Target date</label>
                    <div class="col-sm-10">
                      <input [ngModel]="reportSaveItem.targetDate | toDate | date:'yyyy-MM-dd'" name="targetDate" class="form-control" type="date" >
                    </div>
                  </div>
                  <div class="form-group">
                      <label for="disabledInput" class="col-sm-2 control-label">Status</label>
                      <div class="col-sm-10">
                        <input value="{{reportSaveItem.status}}" class="form-control" type="number" max="100" min="0">
                      </div>
                    </div>
                    <div class="form-group">
                        <label for="disabledInput" class="col-sm-2 control-label">Remark</label>
                        <div class="col-sm-10">
                          <textarea value="{{reportSaveItem.remark}}" class="form-control"type="text" ></textarea>
                        </div>
                      </div>
              
          </form>
          <a *ngIf="isloading" class="btn icon-btn btn-muted">
                <span class="glyphicon btn-glyphicon glyphicon-send img-circle text-muted"></span> 
          <img src="data:image/gif;base64," />
            </a>
          <div   *ngIf="!isloading" class="p-col-m-12" style="padding: 5px 0 5px 0px;">
              <a (click)="hideEditReport()" class="btn icon-btn btn-default" >
                  <span  class="glyphicon btn-glyphicon glyphicon-menu-left img-circle text-muted"></span> Back</a>
                  <a  (click)="saveReport()"  class="btn icon-btn btn-muted">
                      <span class="glyphicon btn-glyphicon glyphicon-floppy-disk img-circle text-muted"></span> Save </a>
          </div>   
</div>
</ng-container>