<ng-container  >
    <form class="form-horizontal">
        <div class="form-group">
          <label class="col-sm-2 control-label">To</label>
          <div class="col-sm-10">
              <ng-select  [multiple]="true"
              [(active)]="valueTo" 
              [items]="items"
              (data)="refreshValueTo($event)"
              (typed)="typed($event)"
              placeholder="No city selected"></ng-select>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">CC</label>
          <div class="col-sm-10">
              <ng-select  [multiple]="true"
              [(active)]="valueCC" 
              [items]="items"
              (data)="refreshValueCC($event)"
              (typed)="typed($event)"
              placeholder="No city selected"></ng-select>
              <!-- <pre>{{itemsToString(valueCC)}}</pre>
              <pre>{{itemsToString(valueTo)}}</pre> -->
                 <div style="margin-top: 5px;" >
      
                    <alert *ngIf="emailNew"  type="success" [dismissible]="true"  >
                        <strong>Email not found!</strong> Do you want to make new Email ?
                       
                        <span   (click)="addNewMail()"  class="glyphicon btn-glyphicon  glyphicon-plus img-circle " style=" color: #3e773f;  margin-left: 5px;"></span>
                      </alert>      
                 </div> 
                    
          </div>
        </div>
      
        
        <div class="form-group">
          <label for="disabledInput" class="col-sm-2 control-label">Subject</label>
          <div class="col-sm-10">
            <input value="{{subject}}" class="form-control" id="disabledInput" type="text" placeholder="Subject..." >
          </div>
        </div>
        <div class="form-group">
            <label for="disabledInput" class="col-sm-2 control-label">More info</label>
            <div class="col-sm-10">
              <input value="{{from}}" class="form-control" id="disabledInput" type="text" placeholder="Subject..." >
            </div>
          </div>
          <app-list-card-contact (changeCard)="changeCard($event)"></app-list-card-contact>
      </form>
      <a *ngIf="isloading" class="btn icon-btn btn-muted">
            <span class="glyphicon btn-glyphicon glyphicon-send img-circle text-muted"></span> 
      <img src="data:image/gif;base64," />
        </a>
      <div   *ngIf="!isloading" class="p-col-m-12" style="padding: 5px 0 5px 0px;">
          <a (click)="callBackHide()" class="btn icon-btn btn-default" >
              <span  class="glyphicon btn-glyphicon glyphicon-menu-left img-circle text-muted"></span> Back</a>
          <a   [ngStyle]=" (valueTo.length === 0)?{'cursor': 'no-drop'}: {}"    (click)="sendReport()" class="btn icon-btn btn-muted">
              <span class="glyphicon btn-glyphicon glyphicon-send img-circle text-muted"></span> Send </a>
              <a  [ngStyle]=" (valueTo.length === 0)?{'cursor': 'no-drop'}: {}"  (click)="saveReport()"  class="btn icon-btn btn-muted">
                  <span class="glyphicon btn-glyphicon glyphicon-floppy-disk img-circle text-muted"></span> Save </a>
      </div>
      <app-report [isShow]="false" (callBackGenericHtml)="callBackGenericHtml($event)" ></app-report>
</ng-container>
