                <div class="row">
                  <div class="col-lg-12"><h1>My Card <a *ngIf="!isShowAddCard"  (click)=" newGroupCard()" class="btn icon-btn btn-primary pull-right" ><span class="glyphicon btn-glyphicon glyphicon-plus img-circle"></span> Add New Card</a></h1></div>
                  
  <ng-container *ngIf="isShowAddCard">
        <app-edit-card  [id]="id" (back)="editCardBackList($event)"></app-edit-card>
  </ng-container>
    
 <ng-container *ngIf="!isShowAddCard">
                  <div *ngFor="let item of gruopContact" class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                    <div  *ngIf=" item?.status !== 2"  class="thumbnail">
                        <div class="caption">
                          <div style="margin: 5px;     position: inherit;" class='col-lg-12'>
                              <span class="glyphicon glyphicon-credit-card"></span>
                              {{ item.group_contact_name   }}
                              <span  (click)="addDefaultCard( item.group_contact_id )"  style="position: absolute;     left: 0px; " tooltip="add default send" [ngClass]=" {'default-none': ( cardDefaul !==  item.group_contact_id) }" class="glyphicon glyphicon-paperclip  pull-right text-primary default-none"></span>
                          </div>
                          <div  style="
                          position: inherit;     max-height:60px;
                          overflow-y: auto;
                                        " class='col-lg-12 well well-add-card'>
                             <app-card-details  [contactId]="item.group_contact_id " ></app-card-details>
                          </div>
                          <!-- <div class='col-lg-12'>
                              <p>4111xxxxxxxx3265</p>
                              <p class="text-muted"> bbb</p >
                                
                          </div> -->
                          <a (click)="editGruopContact(item.group_contact_id)" > <button type="button" class="btn btn-primary btn-xs btn-update btn-add-card">Update</button> </a>
                          <button (click)="deleteGroup(item)" type="button" class="btn btn-danger btn-xs btn-update btn-add-card">Remove</button>
                          <span  [ngClass]=" {'default-none': ( cardDefaul !==  item.group_contact_id) }"  class='glyphicon glyphicon-ok-sign text-success pull-right icon-style '></span>
                      </div>
                    </div>
                  </div>
                </ng-container>
                  
              </div><!-- End container -->
  
  