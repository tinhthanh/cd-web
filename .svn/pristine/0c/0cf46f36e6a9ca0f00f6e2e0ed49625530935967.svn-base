    table.p-table-reposive { 
        /* max-width: 750px; 
         */
         width: 100%;
        border-collapse: collapse; 
        }
    
    /* Zebra striping */
    .p-table-reposive tr:nth-of-type(odd) { 
        background: #eee; 
        }
    
    .p-table-reposive th { 
        background: #3498db; 
        color: white; 
        font-weight: bold; 
        }
    
    .p-table-reposive td , .p-table-reposive th { 
        padding: 5px; 
        border: 1px solid #ccc; 
        text-align: left; 
        font-size: 16px;
        }
    
    /* 
    Max width before this PARTICULAR table gets nasty
    This query will take effect for any screen smaller than 760px
    and also iPads specifically.
    */
    @media 
    only screen and (max-width: 760px), (min-device-width: 768px) and (max-device-width: 1024px)  {
    
        table.p-table-reposive { 
              width: 100%; 
        }
    
        /* Force table to not be like tables anymore */
        .p-table-reposive table, .p-table-reposive thead, .p-table-reposive tbody,.p-table-reposive th, .p-table-reposive td, .p-table-reposive tr { 
            display: block; 
        }
        
        /* Hide table headers (but not display: none;, for accessibility) */
        .p-table-reposive thead tr { 
            position: absolute;
            top: -9999px;
            left: -9999px;
        }
        
        .p-table-reposive tr { border: 1px solid #ccc; }
        
        .p-table-reposive td { 
            /* Behave  like a "row" */
            border: none;
            border-bottom: 1px solid #eee; 
            position: relative;
            padding-left: 50%; 
        }
    
        .p-table-reposive td:before { 
            /* Now like a table header */
            position: absolute;
            /* Top/left values mimic padding */
            top: 6px;
            left: 6px;
            width: 45%; 
            padding-right: 10px; 
            white-space: nowrap;
            /* Label the data */
            content: attr(data-column);
    
            color: #000;
            font-weight: bold;
        }
    
    }
    .timeline__content p:hover a{
        background-color: #5eb85e;
    }
    

