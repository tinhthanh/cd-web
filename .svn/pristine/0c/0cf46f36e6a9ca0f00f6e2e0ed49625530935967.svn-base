 .panel.panel-info .panel-heading .nav.nav-tabs li.active a { border-color:#C1E8F2; }
 .page-header h1{
    display:inline-block;
    animation: in 0.5s;
}
.panel {
    opacity:0;
    animation:in 0.5s ease forwards;
    animation-delay:0.5s;
}
.col-md-6:nth-of-type(2) .panel{ animation-delay:1s; }
.col-md-6:nth-of-type(3) .panel{ animation-delay:1.5s; }
.col-md-6:nth-of-type(4) .panel{ animation-delay:2s; }
.col-md-6:nth-of-type(5) .panel{ animation-delay:2.5s; }
.col-md-6:nth-of-type(6) .panel{ animation-delay:3s; }
@keyframes in {
    0%{ transform:scale(0); opacity: 0; }
    80%{ transform:scale(1.075); opacity: 1; }
    100%{ transform:scale(1); opacity: 1; }
}

@keyframes slide {
    from{ opacity: 0; transform:translateY(-100px); }
}



/* time line */
.timeline{

  
    position: relative;
    padding-top: 3rem;
    padding-bottom: 3rem;
  }
  
  .timeline:before{
  content: "";
  width: 4px;
  height: 100%;
  background-color: #4557bb;

  position: absolute;
  top: 0;
}

.timeline__group{
  position: relative;
}

.timeline__group:not(:first-of-type){
  margin-top: 4rem;
}

.timeline__year{
  padding: .5rem 1.5rem;
  color: #fff;
  background-color: #4557bb;

  position: absolute;
  left: 0;
  top: 0;
}

.timeline__box{
  position: relative;
}

.timeline__box:not(:last-of-type){
  margin-bottom: 30px;
}

.timeline__box:before{
  content: "";
  width: 100%;
  height: 2px;
  background-color:#4557bb;

  position: absolute;
  left: 0;
  z-index: -1;
}

.timeline__date{
  min-width: 65px;
  position: absolute;
  left: 0;

  box-sizing: border-box;
  padding: .5rem 1.5rem;
  text-align: center;

  background-color: #4557bb;
  color: #fff;
}

.timeline__day{
  font-size: 2rem;
  font-weight: 700;
  display: block;
}

.timeline__month{
  display: block;
  font-size: .8em;
  text-transform: uppercase;
}

.timeline__post{
  padding: 1.5rem 2rem;
  border-radius: 2px;
  border-left: 3px solid #4557bb;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, .12), 0 1px 2px 0 rgba(0, 0, 0, .24);
  background-color: #fff;
}
.timeline__post:hover{
    background-color: #f5f5f5;
}

@media screen and (min-width: 641px){

  .timeline:before{
    left: 30px;
  }

  .timeline__group{
    padding-top: 55px;
  }

  .timeline__box{
    padding-left: 80px;
  }

  .timeline__box:before{
    top: 50%;
    transform: translateY(-50%);  
  }  

  .timeline__date{
    top: 50%;
    margin-top: -27px;
  }
}

@media screen and (max-width: 640px){

  .timeline:before{
    left: 0;
  }

  .timeline__group{
    padding-top: 40px;
  }

  .timeline__box{
    padding-left: 20px;
    padding-top: 70px;
  }

  .timeline__box:before{
    top: 90px;
  }    

  .timeline__date{
    top: 0;
  }
}

.timeline{
  font-size: 16px;
}

@media screen and (min-width: 768px){

  html{
    font-size: 62.5%;
  }
}

@media screen and (max-width: 767px){

  html{
    font-size: 55%;
  }
}

