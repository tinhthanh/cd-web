.countries {
    font-family: Helvetica, Arial, sans-serif;
    font-size: 13px;
    width: 20em;
  }
  .countries .country {
    line-height: 39px;
    text-indent: 1em;
    background: #f5f5f5;
    margin-bottom: 1px;
    clear: right;
    overflow: hidden;
    transform: translate3d(0, 0, 0); /* Not sure if it helps here :) */
  }
  .countries .delete {
    cursor: pointer;
    float: right;
    display: inline-block;
    margin: 12px 1em;
    width: 14px;
    height: 14px;
    opacity: 0.12;
    background: url(data:image/svg+xml;base64,)
      no-repeat;
    transition: opacity 0.15s;
  }
  .countries .delete:hover {
    opacity: 0.5;
  }
  .countries .country:hover {
    background-color: #00000036;
  }