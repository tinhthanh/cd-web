<form (ngSubmit)="saveTask() && formTask.valid" [formGroup]="formTask" novalidate class="form-horizontal">

  <div [ngClass]=" {' has-warning' :(formTask.controls['status'].errors && ( formTask.controls['status'].dirty || formTask.controls['status'].touched)) }" class="form-group has-feedback" >
    <label class="col-sm-2 control-label" for="inputWarning">Status </label>
    <div class="col-sm-10">
      <input formControlName="status" type="number" class="form-control" id="inputWarning">
       <span *ngIf="formTask.controls['status'].errors && ( formTask.controls['status'].dirty || formTask.controls['status'].touched)" class="glyphicon glyphicon-warning-sign form-control-feedback"></span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">	Target date </label>
    <div class="col-sm-10">
      <input  formControlName="targetDate"   class="form-control" type="text" #dp="bsDatepicker" bsDatepicker [(bsValue)]="dateNow">
    </div>
  </div>
 
  <div [ngClass]=" {' has-warning' :(formTask.controls['taskName'].errors && ( formTask.controls['taskName'].dirty || formTask.controls['taskName'].touched)) }" class="form-group has-feedback" >
    <label class="col-sm-2 control-label" for="inputWarning">Task Name </label>
    <div class="col-sm-10">
      <input formControlName="taskName" type="text" class="form-control" id="inputWarning">
       <span *ngIf="formTask.controls['taskName'].errors && ( formTask.controls['taskName'].dirty || formTask.controls['taskName'].touched)" class="glyphicon glyphicon-warning-sign form-control-feedback"></span>
    </div>
  </div>


  <div [ngClass]=" {' has-warning' :(formTask.controls['description'].errors && ( formTask.controls['description'].dirty || formTask.controls['description'].touched)) }" class="form-group has-feedback" >
    <label class="col-sm-2 control-label" for="inputWarning">Description </label>
    <div class="col-sm-10">
      <textarea formControlName="description"   class="form-control" type="textarea" id="message" placeholder="Description ..." maxlength="140" rows="2"></textarea>
       <span *ngIf="formTask.controls['description'].errors && ( formTask.controls['description'].dirty || formTask.controls['description'].touched)" class="glyphicon glyphicon-warning-sign form-control-feedback"></span>
    </div>
  </div>
    <div class="form-group">
      <label for="disabledInput" class="col-sm-2 control-label"> Remark </label>
      <div class="col-sm-10">
        <textarea  formControlName="remark"   class="form-control" type="textarea" id="message" placeholder="Remark ..." maxlength="140" rows="4"></textarea>
      </div>
    </div>
    <button type="submit"  [disabled]="!formTask.valid"  id="submit" name="submit" class="btn btn-primary pull-right">Save Task</button>
</form>